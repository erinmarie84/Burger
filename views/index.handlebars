<h1>Eat-Da-Burger</h1>

<div class= 'form'>
    <form>
      <label for= 'burger'>Add your favorite burgers</label>
      <input type= 'text' id= 'burger' name= 'burger'>
      <br>
      <button class= 'submit' type= 'submit'>Devour Burger!</button>
    </form>
</div>

<div class= 'toeat'>
  <h2>Burgers to be eaten</h2>

  <ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers devoured=falst}}
    {{/unless}}
  {{/each}}
  </ul>

</div>

<div class= 'eaten'>
  <h2>Devoured!</h2>

  <ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers devoured=true}
    {{/if}}
  {{/each}}
  </ul>
</div>

